<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rule_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="?attr/colorSurface">

    <!-- Tip badge -->
    <TextView
        android:id="@+id/tvTipBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tip"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/bg_tip_badge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvRule" />

    <!-- Rule text -->
    <TextView
        android:id="@+id/tvRule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rule goes here"
        android:textColor="?attr/colorOnSurface"
        android:textSize="15sp"
        android:ellipsize="end"
        android:singleLine="false"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/tvTipBadge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivStar"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <ImageView
        android:id="@+id/ivStar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@android:drawable/btn_star_big_off"
        android:contentDescription="@string/favorite"
        app:layout_constraintTop_toTopOf="@id/tvRule"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Divider line -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider_gray"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRule"/>
        
</androidx.constraintlayout.widget.ConstraintLayout>
