<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ArchitecturalTips" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Transparent system bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Surface & background colors -->
        <item name="colorSurface">#F7F9FC</item>
        <item name="android:colorBackground">#F7F9FC</item>

        <!-- Accent color -->
        <item name="colorPrimary">#3A7BD5</item>
        <item name="colorPrimaryVariant">#2E5EAA</item>
        <item name="colorSecondary">#56CCF2</item>

        <!-- Toolbar text color -->
        <item name="android:textColorPrimary">#1A1A1A</item>
    </style>
</resources>
